@model IEnumerable<Barbearia.Entidades.Agendamento>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Agendamentos</h2>

<div id="div-filtro">
    <label for="txtData">Selecione a data:</label>
    <input type="text" id="txtData" class="datepicker" name="name" value="" />
</div>

<div id="div-agendamentos" style="max-width: 800px;">
    <table class="table" id="tbAgenda">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataAgendamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoraAgendamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Situacao)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DataAgendamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoraAgendamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Situacao)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>
