@model Barbearia.Entidades.Cliente

<form action="/Clientes/Incluir" method="post">
    <div class="row">
        <input type="hidden" id="hfdIdCliente" name="Id" value="0" />
        <div class="col-11">
            <div class="form-group">
                <label for="txtEmail">Email</label>
                <input type="email" class="form-control" id="txtEmail" name="Email" placeholder="Entre com seu e-mail" value="@Model.Email">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="txtNome">Nome</label>
                <input type="text" class="form-control" id="txtNome" name="Nome" placeholder="Entre com seu nome" value="@Model.Nome">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label for="txtTelefone">Telefone</label>
                <input type="text" class="form-control" id="txtTelefone" name="Telefone" value="@Model.Telefone">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label for="txtTelefone">Telefone</label>
                <input type="text" class="form-control" id="txtDataNascimento" name="DataNascimento" value="@Model.DataNascimento.ToString("dd/MM/yyyy")">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="row">
            <div class="col-lg-12 text-right">
                <input type="button" class="btn btn-primary" value="Confirmar" onclick="SalvarCliente();" />
                <input type="button" class="btn btn-warning" onclick="fecharmodalcliente();" value="Cancelar" />
            </div>
        </div>
    </div>
</form>
<script src="~/Scripts/cliente.js"></script>