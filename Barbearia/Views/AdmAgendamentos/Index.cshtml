@model IEnumerable<Barbearia.Entidades.Agendamento>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Agendamentos</h2>

@*<div id="div-filtro">
    <label for="txtData">Selecione a data:</label>
    <input type="text" id="txtData" class="datepicker" name="name" value="" />
</div>*@

<div id="div-agendamentos" style="max-width: 800px;">
    <table class="table" id="tbAgenda">
        <tr>
            <th>
                Cliente
            </th>
            <th>
               Data
            </th>
            <th>
                Hora
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataAgendamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoraAgendamento)
                </td>

                @if (item.Situacao == true)
                {
                    <td style="color: green;">
                        Ativo
                    </td>
                }
                else
                {
                    <td style="color: red;">
                        Inativo
                    </td>
                }

            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
            </td>
            </tr>
        }    
    </table>
</div>
