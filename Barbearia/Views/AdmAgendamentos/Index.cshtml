@model IEnumerable<Barbearia.Entidades.Agendamento>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Agendamentos</h2>

@*<div id="div-filtro">
    <label for="txtData">Selecione a data:</label>
    <input type="text" id="txtData" class="datepicker" name="name" value="" />
</div>*@

<div id="div-agendamentos" style="max-width: 1170px;">
    <table class="table" id="tbAgenda">
        <tr>
            <th>
                Cliente
            </th>
            <th>
                Data
            </th>
            <th>
                Hora
            </th>
            <th>
                Profissional
            </th>
            <th>
                Status
            </th>
            <th>
                PCD?
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cliente.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataAgendamento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HoraAgendamento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Locacao.Nome)
        </td>
        
        
        @if (item.Situacao == true)
        {
            <td style="color: green;">
                Ativo
            </td>
        }
        else
        {
            <td style="color: red;">
                Inativo
            </td>
        }

        @if (item.Cliente.IsPcd == true)
        {
            <td>
                Sim
            </td>
        }
        else
        {
            <td>
                Não
            </td>
        }

        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
        </td>
    </tr>
        }    
    </table>
</div>
